<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Slider Section</title>
  <link rel="stylesheet" href="/css/view.css">
</head>
<body>
  <div class="container">
    <h1>Slider Section</h1>
    <div class="card-container">
      <% slider.forEach(slider => { %>
        <div class="card">
          <img src="<%= slider.backgroundImage %>" alt="Slider Background" class="card-image">
          <div class="card-content">
            <h2><%= slider.heading %></h2>
            <p><%= slider.description %></p>
            <form action="/slider/delete/<%= slider._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this entry?');">
              <button type="submit" class="delete-button">Delete</button>
            </form>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
