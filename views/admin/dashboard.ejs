    <!-- Main Content -->
    <main class="main-content">
      <header class="header">
        <h1>Welcome, Admin</h1>
      </header>

      <section id="hero-section" class="section">
        <h2>Slider Section</h2>
        <form action="/slider" method="POST">
          <input type="text" name="backgroundImage" placeholder="Background Image URL" required>
          <input type="text" name="heading" placeholder="Heading" required>
          <textarea name="description" placeholder="Description" required></textarea>
          <button type="submit">Add to Slider Section</button>
        </form>
      </section>

      <section id="teaching-team" class="section">
        <h2>Teaching Team</h2>
        <form action="/teaching_team" method="POST">
          <input type="text" name="image" placeholder="Image URL" required>
          <textarea name="description" placeholder="Description" required></textarea>
          <button type="submit">Add to Teaching Team</button>
        </form>
      </section>

      <section id="video-section" class="section">
        <h2>Video Section</h2>
        <form action="/video" method="POST">
          <input type="text" name="videoLink" placeholder="Video Link" required>
          <textarea name="description" placeholder="Description" required></textarea>
          <button type="submit">Add to Video Section</button>
        </form>
      </section>

      <section id="view-data" class="section">
        <h2>View Data</h2>
        <div class="links">
          <a href="/slider">View Slider Section</a>
          <a href="/teaching_team">View Teaching Team</a>
          <a href="/video">View Video Section</a>
        </div>
      </section>
    </main>
  </div>
</body>
</html>
